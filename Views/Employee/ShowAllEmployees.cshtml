@model IEnumerable<FinalApplication.Models.EmployeeModel>
@{
    ViewData["Title"] = "ShowAllEmployees";
  
}
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

<link href="@Url.Content("~/css/Table.css")" rel="stylesheet" type="text/css" />
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>View Employees</h2>
                    </div>
                    <div class="col-sm-6">


                        <a href="/Employee/AddEmployee" class="btn btn-dark">Add New Employee</a>

                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>

                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>

                </thead>

                @foreach (var item in Model)
                {

                    <tbody>
                        <tr>


                            <td>@item.EmployeeId</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Status</td>
                            <td>


                                <a href="/Employee/EditEmployee?id=@item.EmployeeId">Edit</a>
                                <a href="/Employee/DeleteEmployee?id=@item.EmployeeId" onclick="return window.confirm('Are you sure?')">Delete</a>
                            </td>

                        </tr>
                    </tbody>

                }
            </table>


        </div>
    </div>

</div>