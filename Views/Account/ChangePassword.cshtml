@model FinalApplication.Models.ChangePasswordModel

@{
    Layout = null;
}
<head>
    <link href="@Url.Content("~/css/Login.css")" rel="stylesheet" type="text/css" />

</head>

<body>
    <div class="container">
        <div class="title">Change Password</div>
        <div class="content">
            <form asp-action="ChangePassword" id="form" asp-controller="Account">
                <div class="user-details">
                    <div class="input-box">

                        @if (ViewBag.IsSuccess == true)
                        {

                            <div class="row">
                                <div class="col-md-4 offset-4">
                                    <div class="alert alert-success" role="alert">
                                        <p class="text-danger">
                                            Password has been updated successfully
                                        </p>
                                        </div>
                                        <br />
                                    </div>
                                </div>
                            
                            
                        }
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Pwd" class="control-label"></label>
                            <input asp-for="Pwd" class="form-control" />
                            <span asp-validation-for="Pwd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPwd" class="control-label"></label>
                            <input asp-for="NewPwd" class="form-control" />
                            <span asp-validation-for="NewPwd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="button">
                            <input type="submit" value="Reset" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

