@model FinalApplication.Models.EmailConfirmModel

@{
    ViewData["Title"] = "Confirm email";
    Layout = null;
}

<head>
    <link href="@Url.Content("~/css/ForgotPassword.css")" rel="stylesheet" type="text/css" />

</head>

<div class="container">

    <div class="content">

        <div class="user-details">
            <div class="input-box">
                @if (Model.EmailVerified == true)
                {
                    <div class="alert alert-success" role="alert">
                        Your email has been verified successfully.
                    </div>
                }
                else
                {
                    if (Model.EmailSent)
                    {
                        <p>Email sent on your registered email id.</p>
                    }

                    else
                    {
                        <p>We have sent an email on your email id. Click on the link to login.</p>
                    }

                    <form asp-action="ConfirmEmail">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Email" />

                        <p>Did not get any email of deleted by mistake?</p>
                        <div class="button">
                            <input type="submit" value="Resend confirmation email" />
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
   </div>